{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "types": [
            "vite-plugin-monkey/client",
            "vite/client"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
